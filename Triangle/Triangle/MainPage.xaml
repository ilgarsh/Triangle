<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Triangle.MainPage">

    <StackLayout>
        <Entry AutomationProperties.Name="firstSide" 
               AutomationId="firstSide"
               x:Name="A" Placeholder="A = " Keyboard="Text"></Entry>
        <Entry AutomationProperties.Name="secondSide"
               AutomationId="secondSide"
            x:Name="B" Placeholder="B = " Keyboard="Text"></Entry>
        <Entry AutomationProperties.Name="thirdSide"
               AutomationId="thirdSide"
            x:Name="C" Placeholder="C = " Keyboard="Text"></Entry>
        <Button AutomationProperties.Name="buttonRun"
                AutomationId="buttonRun"
            Text="RUN" Clicked="OnButtonRunClicked"></Button>
        <Entry AutomationProperties.Name="txtResult"
               AutomationId="txtResult"
               x:Name="Result"></Entry>
    </StackLayout>

</ContentPage>
